use strict;
use warnings;

print "How many people do you guess come here?";
my $numbers = <STDIN>;
for(1..$numbers){
    my $names = <STDIN>;
    greet($names)
}

sub greet{
    my $name = $_;
    state @names; 
    my $strings;
    $strings = "Hi $name, You are the first one here!" if(!defined(@names));
    $strings = "Hi $name, $names[0] is also here!" if(defined(@names));
    push @names, $_;
}
